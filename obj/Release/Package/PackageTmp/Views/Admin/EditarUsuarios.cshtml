            </div>
            <br />
            <div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Actualizar Usuario" class="btn btn-primary" />
                </div>
            </div>

        }
    </div>


</div>
<div>
    @Html.ActionLink("Regresar al Menu", "Empleados")
</div>
