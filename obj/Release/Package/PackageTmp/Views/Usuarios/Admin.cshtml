@using EncuestasV2.Models;
@model encuesta_usuariosCLS

@{
    Layout = null;
}
<html>
<head>
    <title>Consultoría en seguridad y bienestar Durango</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- vinculo a bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Temas-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- se vincula al hoja de estilo para definir el aspecto del formulario de login-->
    <style>


        body {
            font-size: 12px;
        }

        #Contenedor {
            width: 400px;
            margin: 50px auto;
            background-color: #F3EDED;
            border: 1px solid #ECE8E8;
            height: 400px;
            border-radius: 8px;
            padding: 0px 9px 0px 9px;
        }


        .Icon span {
            background: #A8A6A6;
            padding: 20px;
            border-radius: 120px;
        }

        .Icon {
            margin-top: 10px;
            margin-bottom: 10px;
            color: #FFF;
            font-size: 50px;
            text-align: center;
        }

        .opcioncontra {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div id="Contenedor">
        <h2><label class="label label-primary">Panel de Administrador</label></h2>
        <div class="Icon">
            <!--Icono de usuario-->
            <span class="glyphicon glyphicon-user"></span>
        </div>
        <div class="ContentForm">
            @using (Ajax.BeginForm("LoginAdmin", "Login", "", new AjaxOptions
            {
                HttpMethod = "POST",
                OnSuccess = "Ingresar",
                UpdateTargetId = "divRespuesta"

            }, new { @id = "frmLogin" }))
            {
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
                    @Html.TextBox("usua_n_usuario", null, new { @class = "form-control", @placeholder = "Usuario", @required = "true", id = "nombre" })
                </div>
                <br>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.Password("usua_p_usuario", null, new { @class = "form-control", @placeholder = "*******", @required = "true" })
                </div>
                <br>

                <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
                <div class="opcioncontra">
                    <a href="@Url.Action("Agregar", "Usuarios")" class="stretched-link"><b> Regresar al Inicio</b></a>
                </div>
                <div id="divRespuesta"></div>
            }

            @*@if (Model != null && Model.mensajeError != null)
        {
            @Html.Label(Model.mensajeError, new { @class = "text-danger" })

        }*@
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>

</html>
<script>
    function Ingresar(rpta)
    {

        if (rpta == "1") {
            var porId=document.getElementById("nombre").value;
         
            var url = '@Html.Raw(Url.Action("Index", "Admin"))';
            window.location.href = url;


        } else {

            alert("Usuario o contraseña Incorrecto ");
        }
    }
</script>


