
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "VerResultadoUsuarioGuiaIICategoria";
}

<input type="hidden" id="id_usuario" name="id_usuario" value=@ViewBag.id_usuario />
<h5><strong>CUESTIONARIO PARA IDENTIFICAR LOS FACTORES DE RIESGO PSICOSOCIAL EN LOS CENTROS DE TRABAJO.</strong></h5>
<p>Nombre del empleado: <strong>@ViewBag.nombreEmpleado</strong></p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Resultado de la categoría</th>
            <th>Suma Total</th>
            <th>Nivel de riesgo</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Ambiente de trabajo</td>
            <td>@ViewBag.AmbienteTrabajo</td>
            @if (@ViewBag.AmbienteTrabajo < 3)
            {
                <td>Nulo o despreciable</td>
            }
            @if (@ViewBag.AmbienteTrabajo >= 3 && @ViewBag.AmbienteTrabajo < 5)
            {
                <td>Bajo</td>
            }
            @if (@ViewBag.AmbienteTrabajo >= 5 && @ViewBag.AmbienteTrabajo < 7)
            {
                <td>Medio</td>
            }
            @if (@ViewBag.AmbienteTrabajo >= 7 && @ViewBag.AmbienteTrabajo < 9)
            {
                <td>Alto</td>
            }
            @if (@ViewBag.AmbienteTrabajo >= 9)
            {
                <td>Muy Alto</td>
            }
        </tr>
        <tr>
            <td>Factores propios de la actividad</td>
            <td>@ViewBag.FactoresPropiosActividad</td>
            @if (@ViewBag.FactoresPropiosActividad < 10)
            {
                <td>Nulo o despreciable</td>
            }
            @if (@ViewBag.FactoresPropiosActivida >= 10 && @ViewBag.FactoresPropiosActividad < 20)
            {
                <td>Bajo</td>
            }
            @if (@ViewBag.FactoresPropiosActividad >= 20 && @ViewBag.FactoresPropiosActividad < 30)
            {
                <td>Medio</td>
            }
            @if (@ViewBag.FactoresPropiosActividad >= 30 && @ViewBag.FactoresPropiosActividad < 40)
            {
                <td>Alto</td>
            }
            @if (@ViewBag.FactoresPropiosActividad >= 40)
            {
                <td>Muy Alto</td>
            }
        </tr>
        <tr>
            <td>Organización del tiempo de trabajo</td>
            <td>@ViewBag.OrganizacionTiempoTrabajo</td>
            @if (@ViewBag.OrganizacionTiempoTrabajo < 4)
            {
                <td>Nulo o despreciable</td>
            }
            @if (@ViewBag.OrganizacionTiempoTrabajo >= 4 && @ViewBag.OrganizacionTiempoTrabajo < 6)
            {
                <td>Bajo</td>
            }
            @if (@ViewBag.OrganizacionTiempoTrabajo >= 6 && @ViewBag.OrganizacionTiempoTrabajo < 9)
            {
                <td>Medio</td>
            }
            @if (@ViewBag.OrganizacionTiempoTrabajo >= 9 && @ViewBag.OrganizacionTiempoTrabajo < 12)
            {
                <td>Alto</td>
            }
            @if (@ViewBag.OrganizacionTiempoTrabajo >= 12)
            {
                <td>Muy Alto</td>
            }
        </tr>
        <tr>
            <td>Liderazgo y relaciones en el trabajo</td>
            <td>@ViewBag.LiderazgoRelacionesTrabajo</td>
            @if (@ViewBag.LiderazgoRelacionesTrabajo < 10)
            {
                <td>Nulo o despreciable</td>
            }
            @if (@ViewBag.LiderazgoRelacionesTrabajo >= 10 && @ViewBag.LiderazgoRelacionesTrabajo < 18)
            {
                <td>Bajo</td>
            }
            @if (@ViewBag.LiderazgoRelacionesTrabajo >= 18 && @ViewBag.LiderazgoRelacionesTrabajo < 28)
            {
                <td>Medio</td>
            }
            @if (@ViewBag.LiderazgoRelacionesTrabajo >= 28 && @ViewBag.LiderazgoRelacionesTrabajo < 38)
            {
                <td>Alto</td>
            }
            @if (@ViewBag.LiderazgoRelacionesTrabajo >= 38)
            {
                <td>Muy Alto</td>
            }
        </tr>
    </tbody>
</table>

<div>
    @Html.ActionLink("Regresar al Menu", "ListarEncuesta", "Admin", new { @class = "btn btn-primary my-2 my-sm-0" })
    @Html.ActionLink("CALIFICACIONES DE final", "VerResultadoUsuarioGuiaIIFinal", "Admin", new { id = @ViewBag.id_usuario }, new { @class = "btn btn-primary my-2 my-sm-0" })
</div>





