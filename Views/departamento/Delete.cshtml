                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar registro" class="btn btn-danger" /> |
            <a href="@Url.Action("Index", "departamento")" class="btn btn-primary" target="_blank"><i class="fas fa-undo-alt"></i><span></span><b> Lista de Departamentos</b></a>
