@model EncuestasV2.Models.encuaesta_departamento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
    <body>
        <div class="container-fluid"  style="height:496px;">
            <h2>Ingresar Departamento</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-5">Descripción de Departamento</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.dep_desc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dep_desc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Nuevo Departamento" class="btn btn-default" />
                            @Html.ActionLink("Lista de Departamentos", "Index", "departamento", new { area = "" }, new { @class = "btn btn-primary my-2 my-sm-0" })
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-primary" target="_blank"><i class="fas fa-undo-alt"></i><span></span><b> Regresar a Menu</b></a>
                        </div>
                    </div>
                </div>
            }


        </div>

    </body>
    
